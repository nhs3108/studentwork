<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>studentwork</display-name>
  <context-param>
    <param-name>slogan</param-name>
    <param-value>&quot;Đừng để những đòi hỏi kinh nghiệm cản trở bạn khi mới ra trường&quot;</param-value>
  </context-param>
  <context-param>
    <param-name>indexTitle</param-name>
    <param-value>Student Work || Mạng xã hội việc làm dành cho sinh viên</param-value>
  </context-param>
  <context-param>
    <param-name>minLenghtFeedback</param-name>
    <param-value>30</param-value>
  </context-param>
  <context-param>
    <param-name>websiteName</param-name>
    <param-value>studentwork</param-value>
  </context-param>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/errorpages/errorPage404.jsp</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>home</welcome-file>
  </welcome-file-list>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>controllers.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SignUp</servlet-name>
    <servlet-class>controllers.SignUpServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>controllers.HomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>controllers.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>About</servlet-name>
    <servlet-class>controllers.AboutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ContactUs</servlet-name>
    <jsp-file>/WEB-INF/jsp/contactus.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SignUp</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>About</servlet-name>
    <url-pattern>/about</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ContactUs</servlet-name>
    <url-pattern>/contactus</url-pattern>
  </servlet-mapping>
</web-app>